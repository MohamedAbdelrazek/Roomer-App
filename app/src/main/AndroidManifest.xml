<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mohamedabdelrazek.com.roomer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddGuestActivity"
            android:label="Add a new Guest"
            android:parentActivityName=".MainActivity"
            android:theme="@style/EditorTheme">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mohamedabdelrazek.com.roomer.AddGuestActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:label="Guest Details"
            android:parentActivityName=".MainActivity"
            android:theme="@style/EditorTheme">
        </activity>
        <activity android:name=".UpadteActivity"
            android:label="Upadte Guest Info ..."
            android:parentActivityName=".MainActivity"
            android:theme="@style/EditorTheme">
        </activity>
    </application>

</manifest>