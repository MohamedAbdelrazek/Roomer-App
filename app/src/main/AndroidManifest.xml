<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mohamedabdelrazek.com.roomer">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name=".GuestsData.GusetProvidor"
            android:authorities="mohamedabdelrazek.com.roomer"
            android:exported="false" />

        <activity
            android:name=".ZokaPackage.EditGuestActivity"
            android:noHistory="true"
            android:parentActivityName=".ZokaPackage.MainActivity"
            android:theme="@style/EditorTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ZokaPackage.MainActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".ZokaPackage.DetailsActivity"
            android:label="Guest Details"
            android:noHistory="true"
            android:parentActivityName=".ZokaPackage.MainActivity"
            android:theme="@style/EditorTheme"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".ZokaPackage.SplashScreen"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>